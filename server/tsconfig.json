{
    "compilerOptions": {
        "outDir": "./dist",
        // "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "rootDir": "./src",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": ["node_modules"]
}